# AWS Quick Assess - Environment Variables Template
# Copy this file to .env and fill in your values

# ========================================
# AWS Credentials (Required for AWS scanning)
# ========================================
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
# AWS_SESSION_TOKEN=  # Optional: for temporary credentials

# ========================================
# Application Configuration
# ========================================
CONFIG_PATH=/app/config/config.yaml
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========================================
# Snyk Configuration (Optional)
# ========================================
# SNYK_AUTH=your_snyk_auth_token_here
# Note: SNYK_AUTH is used for both npm dependency scanning and IaC scanning
# Organization ID is configured in config.yaml (optional)

# ========================================
# Repository Path (for local scanning)
# ========================================
REPO_PATH=/repo

# ========================================
# Output Configuration
# ========================================
REPORTS_PATH=/app/reports
LOGS_PATH=/app/logs

# ========================================
# Execution Configuration
# ========================================
# PARALLEL_EXECUTION=true
# MAX_WORKERS=4
# SCANNER_TIMEOUT=600

# ========================================
# Tool-Specific Configurations
# ========================================
# CHECKOV_SKIP_CHECKS=CKV_AWS_1,CKV_AWS_2
# TFSEC_MINIMUM_SEVERITY=MEDIUM
# PROWLER_SEVERITY=critical,high
# GITLEAKS_CONFIG_PATH=/app/config/gitleaks.toml

# ========================================
# Feature Flags
# ========================================
# ENABLE_SBOM=false
# ENABLE_BASELINE=false
# SUPPRESSION_FILE=/app/config/suppressions.yaml
